# WoW Server Configuration
# These are automatically configured from the hardcoded values in utils/config.ts
# Realm servers and ports are configured there

# Keycloak Configuration
NUXT_PUBLIC_KEYCLOAK_REALM=wow-management
NUXT_PUBLIC_KEYCLOAK_CLIENT_ID=wow-frontend
NUXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080

# Directus Configuration (for future use)
NUXT_PUBLIC_DIRECTUS_URL=http://localhost:8055

# API Configuration
NUXT_PUBLIC_API_BASE=http://localhost:3000

# OAuth Proxy Configuration (in Kubernetes)
# When deployed behind oauth-proxy, the following headers will be set:
# - X-Remote-User: username from Keycloak
# - X-Remote-Email: email from Keycloak
# - X-Remote-Groups: comma-separated list of group names
# These are read automatically by the auth endpoints
