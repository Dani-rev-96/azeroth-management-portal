# NUXT_DB_REALM_2_USER=acore
# NUXT_DB_REALM_2_PASSWORD=acore

# Add more realms as needed (up to REALM_9)

# ============================================
# PUBLIC CONFIGURATION
# ============================================

# Auth mode: 'mock' (local dev) | 'oauth-proxy' (production) | 'header' (generic external auth) | 'direct' (WoW account login)
NUXT_PUBLIC_AUTH_MODE=mock

# Mock user settings (only used when AUTH_MODE=mock)
NUXT_PUBLIC_MOCK_USER=admin
NUXT_PUBLIC_MOCK_EMAIL=admin@localhost
NUXT_PUBLIC_MOCK_GM_LEVEL=3

# External services
NUXT_PUBLIC_DIRECTUS_URL=http://localhost:8055

# App config
NUXT_PUBLIC_APP_BASE_URL=http://localhost:3000

# Debug mode (shows auth headers in logs)
NUXT_PUBLIC_DEBUG_MODE=false

# File paths
PUBLIC_PATH=./data/public

# ============================================
# CACHE API CONFIGURATION
# ============================================
# Token for cache invalidation API (nuxt-multi-cache)
# Generate a secure random token for production
NUXT_CACHE_API_TOKEN=change-me-in-production

# ============================================
# SHOP CONFIGURATION
# ============================================

# Delivery method: 'mail' (offline), 'bag' (online via SOAP), 'both' (user choice)
NUXT_PUBLIC_SHOP_DELIVERY_METHOD=mail

# Price markup percentage on item vendor prices
NUXT_PUBLIC_SHOP_MARKUP_PERCENT=20
