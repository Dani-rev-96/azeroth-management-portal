{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server: nuxt",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/.bin/nuxi",
            "args": [
                "dev"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "server: nuxt - ssl",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/.bin/nuxi",
            "args": [
                "dev",
								"--https",
								"--ssl-cert",
								"./certs/localhost.pem",
								"--ssl-key",
								"./certs/localhost-key.pem"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "deno server: nuxt - ssl",
            "outputCapture": "std",
            "program": "${workspaceFolder}/node_modules/.deno/nuxi@3.14.0/node_modules/nuxi/bin/nuxi.mjs",
            "args": [
                "dev",
								"--https",
								"--ssl-cert",
								"./certs/localhost.pem",
								"--ssl-key",
								"./certs/localhost-key.pem"
            ]
        }
    ]
}
